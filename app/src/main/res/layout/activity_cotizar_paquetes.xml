<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#003652"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.reasa.cotizador.CotizarPaquetes">

    <TextView
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="Alto (cm)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#FFFFFF"
        android:id="@+id/paquete_alto"
        android:inputType="numberDecimal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="Ancho (cm)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#FFFFFF"
        android:id="@+id/paquete_ancho"
        android:inputType="numberDecimal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="Profundidad (cm)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#FFFFFF"
        android:id="@+id/paquete_profundidad"
        android:inputType="numberDecimal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="Peso (kg)"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#FFFFFF"
        android:id="@+id/paquete_peso"
        android:inputType="numberDecimal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="Cantidad de paquetes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:textColor="#FFFFFF"
        android:id="@+id/paquete_cantidad"
        android:inputType="number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"></LinearLayout>
            <Button
                android:layout_weight="2"
                android:id="@+id/limpiar_paquete"
                android:text="Limpiar"
                android:layout_width="0dp"
                android:layout_height="fill_parent" />
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"></LinearLayout>
            <Button
                android:layout_weight="2"
                android:id="@+id/agregar_paquete"
                android:text="Agregar"
                android:layout_width="0dp"
                android:layout_height="fill_parent" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"></LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cantidad_paquetes"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:layout_weight="1"
            android:text="Cantidad de paquetes agregados: 0"
            android:layout_width="fill_parent"
            android:layout_height="0dp" />
        <ListView
            android:id="@+id/paquetes"
            android:layout_weight="6"
            android:layout_width="fill_parent"
            android:layout_height="0dp"></ListView>

        <Button
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/cotizar_envio"
            android:text="Cotizar"
            android:layout_width="200dp"
            android:layout_height="0dp" />

    </LinearLayout>
</LinearLayout>
