<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#003652"
    tools:context="com.reasa.cotizador.Cotizacion">

    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:text="Total de la cotizaci贸n"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:alpha=".7"
        android:id="@+id/subtotal"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:text="+ $ 400"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:alpha=".7"
        android:id="@+id/retenciones"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:text="+ $ 100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:alpha=".7"
        android:id="@+id/iva"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:text="+ $ 400"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:alpha=".40"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:text="+ $ 400"
        android:layout_width="350dp"
        android:layout_height="1dp" />

    <TextView
        android:id="@+id/total_cotizacion"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="65sp"
        android:text="$50"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/descuento"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:text="$50"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/viaje_destino"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:text="El viaje fue de culiacan a guadalajara"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:alpha=".60"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />
    <TextView
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:text="Descripci贸n"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cantidad_cotizacion"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="Descripci贸n"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ListView
            android:id="@+id/paquetes_cotizados"
            android:layout_weight="10"
            android:layout_width="fill_parent"
            android:layout_height="0dp"></ListView>

        <Button
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/nueva_cotizacion"
            android:text="Nueva cotizaci贸n"
            android:layout_weight="2"
            android:layout_width="200dp"
            android:layout_height="0dp" />
    </LinearLayout>

</LinearLayout>
